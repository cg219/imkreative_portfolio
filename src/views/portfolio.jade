.wrapper
	header
		img.logo(src="images/logo.png" ng-click="gotoLink('/')")
		nav.navigation
			ul
				li.title: a(href="mailto:mente@imkreative.com") Contact
				li.title Projects
				li: a(ng-click="showCategory('')") All
				li(ng-repeat="cat in categories")
					a(ng-click="$parent.showCategory(cat.fields.name)") {{cat.fields.name}}
	section.portfolio-section
		ul
			li.entry(ng-repeat="entry in entries | filter: currentCategory" ng-click="gotoLink(entry.fields.url)")
				img(src="{{getAsset(entry.fields.thumbnail.sys.id)}}")
				.info
					.info-background
					.info-text
						p.title {{entry.fields.name}} &mdash; 
							span {{entry.fields.client}}
						p.agency 
							span(ng-repeat="role in entry.fields.role") {{role}} {{$last ? "" : "/"}} 
							| [at] {{entry.fields.agency}}
						p.tech
							span(ng-repeat="tech in entry.fields.technology") {{tech}}
						p.active(ng-class="{offline: entry.fields.active == false}") {{entry.fields.active == true ? "Online" : "Offline"}}